<h2><%= @cocktail.name %></h2>


  <% @cocktail.doses.each do |dose| %>
    <p> <%= dose.description%> <%= dose.ingredient.name %> <%=link_to "Delete Ingredient?", dose_path(dose) %></p>
  <% end %>



<%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>


<p><i><%= link_to "Return Home", cocktails_path %></i></p>
